<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bounceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bounce Animation"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bounceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Bounce A"/>
        <TextView
            android:id="@+id/sequentialTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sequential Animation"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/sequentialBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Sequential A"/>
        <TextView
            android:id="@+id/togetherTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Together Animation"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/togetherBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Together A"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>